<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline45"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline55"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/lycoris"
        android:scaleType="centerCrop"
        android:foreground="@drawable/custom_background_login"
        app:layout_constraintBottom_toTopOf="@id/guideline55"/>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintTop_toBottomOf="@id/guideline45"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="@dimen/dp_40"
        android:alpha="0.8"
        app:cardCornerRadius="@dimen/dp_30"
        app:strokeColor="@color/alpha0">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/button_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_50"
            android:orientation="vertical">
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_24"
                app:cornerRadius="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_16"
                android:text="@string/continue_with_your_email"
                app:icon="@drawable/ic_phone"
                app:iconGravity="start"
                android:id="@+id/email_login"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_24"
                app:cornerRadius="@dimen/dp_8"
                android:foreground="@drawable/sign_in_google"
                android:id="@+id/google_login"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_tos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tos_and_pp"
                android:layout_marginTop="@dimen/dp_36"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>