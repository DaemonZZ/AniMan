<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_16">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_avt"
        android:layout_width="@dimen/dp_36"
        android:layout_height="@dimen/dp_36"
        app:cardCornerRadius="@dimen/dp_30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_avt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_adult" />
    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_name"
        style="@style/TextAppearance.Material3.LabelMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:lines="1"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/card_avt"
        app:layout_constraintStart_toEndOf="@id/card_avt"
        app:layout_constraintTop_toTopOf="@id/card_avt"
        tools:text="ThangDN6" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_content"
        style="@style/TextAppearance.Material3.BodySmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stars_layout"
        tools:text="Phim ny qua de ma oiPhim nay hay qua de ma oiPhim nay hay qua de ma oiPhim nay hay qua de ma oiPhim nay hay qua de ma oi" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_time"
        style="@style/TextAppearance.Material3.LabelMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:textColor="@color/md_theme_onSurface"
        app:layout_constraintBottom_toBottomOf="@id/card_avt"
        app:layout_constraintStart_toEndOf="@id/text_name"
        app:layout_constraintTop_toTopOf="@id/card_avt"
        tools:text="10 hours" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        app:dividerThickness="@dimen/dp_1"
        app:layout_constraintTop_toBottomOf="@id/text_content" />

    <LinearLayout
        android:id="@+id/stars_layout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_8"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_avt">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/start1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_2"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/star_outline" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/start2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_2"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/star_outline" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/start3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_2"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/star_outline" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/start4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_2"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/star_outline" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/start5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_2"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/star_outline" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>