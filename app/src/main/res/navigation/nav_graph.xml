<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.daemonz.animange.fragment.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/toHomeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.daemonz.animange.fragment.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_playerFragment2"
            app:destination="@id/playerFragment2" />
    </fragment>
    <fragment
        android:id="@+id/playerFragment2"
        android:name="com.daemonz.animange.fragment.PlayerFragment"
        android:label="PlayerFragment">
        <argument
            android:name="item"
            app:argType="string" />
    </fragment>

</navigation>