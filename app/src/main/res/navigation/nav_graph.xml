<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/tab1Fragment">

    <fragment
        android:id="@+id/tab1Fragment"
        android:name="com.daemonz.animange.fragment.Tab1Fragment"
        android:label="Tab1Fragment" />
    <fragment
        android:id="@+id/tab2Fragment"
        android:name="com.daemonz.animange.fragment.Tab2Fragment"
        android:label="Tab2Fragment" />
    <fragment
        android:id="@+id/tab3Fragment"
        android:name="com.daemonz.animange.fragment.Tab3Fragment"
        android:label="Tab3Fragment" />
    <fragment
        android:id="@+id/tab4Fragment"
        android:name="com.daemonz.animange.fragment.Tab4Fragment"
        android:label="Tab4Fragment" />
    <fragment
        android:id="@+id/tab5Fragment"
        android:name="com.daemonz.animange.fragment.Tab5Fragment"
        android:label="Tab5Fragment">
        <action
            android:id="@+id/action_tab5Fragment_to_chooseUserFragment"
            app:destination="@id/chooseUserFragment" />
        <action
            android:id="@+id/action_tab5Fragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_tab5Fragment_to_favouritesFragment"
            app:destination="@id/favouritesFragment" />
    </fragment>
    <fragment
        android:id="@+id/chooseUserFragment"
        android:name="com.daemonz.animange.fragment.ChooseUserFragment"
        android:label="ChooseUserFragment">
        <action
            android:id="@+id/toProfile"
            app:destination="@id/nav_profile">
            <argument
                android:name="user"
                android:defaultValue="@null"
                app:argType="com.daemonz.animange.entity.User"
                app:nullable="true" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.daemonz.animange.fragment.ProfileFragment"
        android:label="ProfileFragment">
        <argument
            android:name="user_id"
            app:argType="string" />
        <action
            android:id="@+id/action_profileFragment_to_secretFragment"
            app:destination="@id/secretFragment" />
    </fragment>
    <fragment
        android:id="@+id/favouritesFragment"
        android:name="com.daemonz.animange.fragment.FavouritesFragment"
        android:label="FavouritesFragment" />
    <include app:graph="@navigation/nav_profile" />
    <fragment
        android:id="@+id/secretFragment"
        android:name="com.daemonz.animange.fragment.SecretFragment"
        android:label="SecretFragment" />
</navigation>
